# Trash indicator
[trash]
label=
interval=60
color=#00bcd4

[separator]
color=#00bcd4

# Time
[time]
label=
command=date '+%a %d %b, %r'
interval=1

[separator]

# Battery indicator
[battery]
label=
interval=10
color=#00e676

[separator]
color=#00e676

# Volume indicator
[volume]
label=
interval=once
color=#76ff03
signal=2

[separator]
color=#76ff03

# Brighness level
[brightness]
label=
color=#ffd600
interval=once
signal=1

[separator]
color=#ffd600

# Cpu
[cpu]
label=
color=#f44336
interval=10

[separator]
color=#f44336

# Bluetooth
[bluetooth]
label=
color=#00bcd4
interval=10

[separator]
color=#00bcd4

# Wifi
[wifi]
label=
color=#a0dcd4
command=echo $(cat /sys/class/net/wlp3s0/operstate) $(ip addr | grep inet.\*wlp3s0 | awk '{print $2}')
interval=10

[separator]
color=#a0dcd4

# Ethernet
[ethernet]
label=
color=#bcd400
command=echo $(cat /sys/class/net/enp2s0/operstate) $(ip addr | grep inet.\*enp2s0 | awk '{print $2}')
interval=10

[separator]
color=#bcd400

# Disk usage
[diskusage]
label=
interval=60
command=echo $(df -h / | awk 'NR==2{print $4"+"$3"+OS="$2}')
color=#ff9800

[separator]
color=#ff9800

# Memory usage
[memory]
label=
color=#e040fb
interval=10

[separator]
color=#e040fb
