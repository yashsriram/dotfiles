######## paths ########
set folder = ~/.mail
set header_cache = ~/.neomutt/cache/headers
set message_cachedir = ~/.neomutt/cache/bodies
set certificate_file = /etc/ssl/certs/ca-certificates.crt
set mailcap_path = ~/.neomutt/mailcap
set tmpdir = ~/.neomutt/tmp

######## source files ########
source ~/.neomutt/colors

######## per-account options ########
# folder-hook 'cse' 'source ~/.neomutt/cse.iitb.ac.in'
# folder-hook 'gpo' 'source ~/.neomutt/iitb.ac.in'
source ~/.neomutt/accounts/gmail1.com
mailboxes =gmail1/inbox =gmail1/sent =gmail1/trash

######## basic options ########
set mbox_type = Maildir
set editor = "nvim"
set sleep_time=0
set date_format = "%h %d %Y %I:%M %p"
set smart_wrap

set wait_key = no
set timeout = 3
set mail_check = 120
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set send_charset = "utf-8:iso-8859-1:us-ascii"
set charset = "utf-8"
ignore *
unignore from: to: cc: bcc: date: subject:
unhdr_order *
hdr_order from: to: cc: bcc: date: subject:
auto_view text/html application/text application/pdf
alternative_order text/enriched text/html text/plain text

######## status line ########
set status_chars = " *%A"
set status_format = "[ Folder: %f ] [%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]%>â”€%?p?( %p postponed )?"

######## index view ########
set index_format = "%4C %M [%Z] %?X?A& ? %15.15F %-114.114s (%e/%E) %D"
bind index <left> noop
bind index <right> display-message
bind index [ display-message
bind index ] display-message
bind index g noop
bind index gg first-entry
bind index G last-entry
bind index N search-opposite
bind index gr toggle-new

######## pager view ########
set pager_index_lines = 0
set pager_context = 0
bind pager <right> view-attachments
bind pager <left> exit
bind pager <down> next-line
bind pager <up> previous-line
bind pager [ previous-entry
bind pager ] next-entry
bind pager g noop
bind pager gg top
bind pager G bottom

set pager_stop
set menu_scroll
set tilde
unset markers

######## attach view ########
bind attach <left> exit
bind attach <right> view-attach

######## compose view ########
set edit_headers                     # show headers when composing
set attribution = "On %d, %n wrote:" # format of quoting header
set forward_format = "Fwd: %s"       # format of subject when forwarding
set include                          # include message in replies
set forward_quote                    # include message in forwards

set fcc_attach                       # save attachments with the body
set forward_decode                   # decode when forwarding
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set text_flowed
unset sig_dashes                     # no dashes before sig
unset mime_forward                   # forward attachments as part of body

######## global keymaps ########
bind index,pager @ compose-to-sender
bind index <tab> sync-mailbox
bind index <space> collapse-thread
macro index,pager O "<shell-escape>mbsync -a<enter>" "Sync all mail using mbsync"

bind index,pager D purge-message
bind index,pager R group-reply


